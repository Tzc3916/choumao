-- 功能页设计
local function createFeaturePage()
    local FeaturePage = Instance.new("ScrollingFrame")
    FeaturePage.Size = UDim2.new(1, 0, 1, 0)
    FeaturePage.BackgroundTransparency = 1
    FeaturePage.ScrollBarThickness = 4
    FeaturePage.ScrollBarImageColor3 = Color3.fromRGB(100, 100, 150)
    FeaturePage.Visible = false
    FeaturePage.Parent = ContentFrame
    return FeaturePage
end

local FeaturePage1 = createFeaturePage()
local FeaturePage2 = createFeaturePage()
local FeaturePage3 = createFeaturePage()

-- 高级按钮创建函数
local function createModernButton(parent, text, yPos, color, icon)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 180, 0, 42)
    btn.Position = UDim2.new(0, 30, 0, yPos)
    btn.BackgroundColor3 = color
    btn.Text = "   "..text
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.TextXAlignment = Enum.TextXAlignment.Left
    btn.AutoButtonColor = false
    btn.Parent = parent
    
    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 10)
    
    local stroke = Instance.new("UIStroke", btn)
    stroke.Thickness = 1
    stroke.Color = Color3.fromRGB(255, 255, 255)
    stroke.Transparency = 0.8
    
    -- 添加图标
    if icon then
        local iconLabel = Instance.new("ImageLabel")
        iconLabel.Size = UDim2.new(0, 24, 0, 24)
        iconLabel.Position = UDim2.new(0, 12, 0.5, -12)
        iconLabel.Image = "rbxassetid://"..icon
        iconLabel.BackgroundTransparency = 1
        iconLabel.Parent = btn
    end
    
    -- 悬停动画
    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {Size = UDim2.new(0, 190, 0, 44)}):Play()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundTransparency = 0.1}):Play()
    end)
    
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {Size = UDim2.new(0, 180, 0, 42)}):Play()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundTransparency = 0}):Play()
    end)
    
    return btn
end

-- 功能1页按钮
local btn1 = createModernButton(FeaturePage1, "老外脚本不用解卡", 30, Color3.fromRGB(80, 120, 200), "10734951820")
local btn2 = createModernButton(FeaturePage1, "空中家具要解卡", 85, Color3.fromRGB(100, 140, 220), "10734951820")
local btn3 = createModernButton(FeaturePage1, "要解卡密", 140, Color3.fromRGB(120, 160, 240), "10734951820")

-- 按钮功能
btn1.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/VapeVoidware/VW-Add/main/nightsintheforest.lua"))()
end)

btn2.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/kedd063/KdmlScripts/refs/heads/main/SkyBaseMakerV1.lua"))()
end)

btn3.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/H4xScripts/Loader/refs/heads/main/loader.lua"))()
end)

-- 页签切换
local pages = {
    [infoTab] = InfoPage,
    [func1Tab] = FeaturePage1,
    [func2Tab] = FeaturePage2,
    [func3Tab] = FeaturePage3
}

for _, btn in pairs(TabBtns) do
    btn.MouseButton1Click:Connect(function()
        InfoPage.Visible = false
        FeaturePage1.Visible = false
        FeaturePage2.Visible = false
        FeaturePage3.Visible = false
        
        if pages[btn] then
            pages[btn].Visible = true
        end
    end)
end

-- ===== 高级悬浮窗按钮 =====
local ToggleBtn = Instance.new("ImageButton")
ToggleBtn.Name = "ToggleButton"
ToggleBtn.Size = UDim2.new(0, 50, 0, 50)
ToggleBtn.Position = UDim2.new(0, 20, 0, 20)
ToggleBtn.BackgroundColor3 = Color3.fromRGB(60, 80, 160)
ToggleBtn.Image = "rbxassetid://10734951820" -- 菜单图标
ToggleBtn.Parent = Main

local ToggleCorner = Instance.new("UICorner", ToggleBtn)
ToggleCorner.CornerRadius = UDim.new(1, 0)

local ToggleStroke = Instance.new("UIStroke", ToggleBtn)
ToggleStroke.Thickness = 2
ToggleStroke.Color = Color3.fromRGB(180, 180, 255)

-- 悬浮窗动画
ToggleBtn.MouseEnter:Connect(function()
    TweenService:Create(ToggleBtn, TweenInfo.new(0.3), {Size = UDim2.new(0, 55, 0, 55), Rotation = 90}):Play()
end)

ToggleBtn.MouseLeave:Connect(function()
    TweenService:Create(ToggleBtn, TweenInfo.new(0.3), {Size = UDim2.new(0, 50, 0, 50), Rotation = 0}):Play()
end)

-- 拖动逻辑
local btnDragging = false
local btnDragStart, btnStartPos

ToggleBtn.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        btnDragging = true
        btnDragStart = input.Position
        btnStartPos = ToggleBtn.Position
    end
end)

UIS.InputChanged:Connect(function(input)
    if btnDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - btnDragStart
        ToggleBtn.Position = btnStartPos + UDim2.new(0, delta.X, 0, delta.Y)
    end
end)

UIS.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        btnDragging = false
    end
end)

-- 主窗口拖动逻辑
local frameDragging = false
local frameDragStart, frameStartPos

TopBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        frameDragging = true
        frameDragStart = input.Position
        frameStartPos = Frame.Position
    end
end)

UIS.InputChanged:Connect(function(input)
    if frameDragging and input.UserInputType == Enum.UserInputType.MouseMovement then
        local delta = input.Position - frameDragStart
        Frame.Position = frameStartPos + UDim2.new(0, delta.X, 0, delta.Y)
    end
end)

UIS.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        frameDragging = false
    end
end)

-- 切换显示/隐藏（带动画）
ToggleBtn.MouseButton1Click:Connect(function()
    Frame.Visible = not Frame.Visible
    if Frame.Visible then
        TweenService:Create(Frame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {Size = UDim2.new(0, 520, 0, 340), Position = UDim2.new(0.5, -260, 0.5, -170)}):Play()
        ToggleBtn.Image = "rbxassetid://10734951820" -- 关闭图标
    else
        TweenService:Create(Frame, TweenInfo.new(0.3), {Size = UDim2.new(0, 0, 0, 0), Position = UDim2.new(0.5, 0, 0.5, 0)}):Play()
        ToggleBtn.Image = "rbxassetid://10734951820" -- 菜单图标
    end
end)

-- 初始状态
InfoPage.Visible = true
FeaturePage1.Visible = false
FeaturePage2.Visible = false
FeaturePage3.Visible = false

print("🎉 高级WOW加载器已加载！")

-- 启动动画
coroutine.wrap(function()
    ToggleBtn.Size = UDim2.new(0, 0, 0, 0)
    TweenService:Create(ToggleBtn, TweenInfo.new(0.8, Enum.EasingStyle.Elastic), {Size = UDim2.new(0, 50, 0, 50)}):Play()
end)()